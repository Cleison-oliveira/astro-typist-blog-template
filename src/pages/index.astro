---
// @ts-ignore
import AboutContent from "../../content/about.typ?html&body";
// @ts-ignore
import CVContent from "../../content/cv.typ?html&body";
// @ts-ignore
import NewsContent from "../../content/news.typ?html&body";
import Header from "../components/Header.astro";
import "../styles/main.css";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link
			rel="icon"
			type="image/svg+xml"
			href={`${import.meta.env.BASE_URL}favicon.svg`}
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<Header />
	</head>
	<body>
		<main>
			<section aria-label="About" class="about-section">
				<div class="about-container">
					<div class="about-content">
						<AboutContent />
					</div>
				</div>
			</section>
		</main>
	</body>
</html>
